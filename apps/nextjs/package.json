    "@trpc/react-query": "11.0.0-rc.364",
    "@trpc/server": "11.0.0-rc.364",
    "framer-motion": "^11.1.9",
    "geist": "^1.3.0",
    "lucide-react": "^0.378.0",
    "next": "^14.2.3",
    "react": "18.3.1",
